<?xml version="1.0" encoding="utf-8" ?>
<log4net debug="false">
	<!-- "normal" log file appender -->
	<appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
		<encoding value="windows-1255" />
		<file type="log4net.Util.PatternString" value="Servers Logs\Chat Server\Chat.log" />
		<param name="AppendToFile" value="true" />
		<param name="MaxSizeRollBackups" value="1" />
		<param name="MaximumFileSize" value="250MB" />
		<param name="RollingStyle" value="Size" />
    <param name="LockingModel" type="log4net.Appender.FileAppender+MinimalLock" />
		<layout type="log4net.Layout.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} [%level] - %m%n" />
		</layout>
	</appender>

	<!-- logger -->
	<root>
		<level value="INFO" /> 
		<appender-ref ref="ColoredConsoleAppender" />
		<appender-ref ref="LogFileAppender" />
	</root>

	  <!-- operation data logger -->
	  <!-- set level to DEBUG to enable operation data logging-->
	<logger name="OperationData" additivity="false">
		<level value="INFO" />
		<appender-ref ref="ColoredConsoleAppender" />
		<appender-ref ref="LogFileAppender" />
	</logger>
</log4net>
